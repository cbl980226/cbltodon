{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "paths": {
      "@cbltodon/ui-common": ["libs/ui-common/src/index.ts"],
      "@cbltodon/ui-theme": ["libs/ui-theme/src/index.ts"],
      "@cbltodon/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
